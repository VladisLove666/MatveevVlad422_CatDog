<Page x:Class="catdooog.Pages.AddPetPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:catdooog.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPetPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Имя питомца</TextBlock>
            <TextBox x:Name="NameTextBox" Width="200" Height="30" Margin="10"/>
            <TextBlock>Описание</TextBlock>
            <TextBox x:Name="DescriptionTextBox" Width="200" Height="30" Margin="10"/>
            <TextBlock x:Name="ImagePathTextBlock" TextWrapping="Wrap" />
            <Button x:Name="SelectImageButton" Content="Выбрать изображение" Click="SelectImageButton_Click" Width="200" Height="30"/>
            <Button x:Name="AddBtn" Content="Добавить" Click="AddBtn_Click" Width="200" Height="30" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
